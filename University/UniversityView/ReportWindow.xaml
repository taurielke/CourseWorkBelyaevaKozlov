<Window x:Class="UniversityView.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:BoldReports="clr-namespace:BoldReports.UI.Xaml;assembly=BoldReports.Wpf"
        mc:Ignorable="d"
        Title="Отчёт" Height="600" Width="1000" Loaded="ReportWindow_Loaded">
    <Grid Margin="0,0,-150,0">
        <BoldReports:ReportViewer Name ="ReportViewer" Margin="0,100,0,0"></BoldReports:ReportViewer>
        <Label Content="С" HorizontalAlignment="Left" Margin="11,37,0,0" VerticalAlignment="Top"/>
        <Label Content="по" HorizontalAlignment="Left" Margin="147,37,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="datePickerFrom" HorizontalAlignment="Left" Margin="34,38,0,0" VerticalAlignment="Top" Width="105"/>
        <DatePicker x:Name="datePickerTo" HorizontalAlignment="Left" Margin="176,38,0,0" VerticalAlignment="Top" Width="105"/>
        <Button x:Name="buttonMake" Content="Показать" HorizontalAlignment="Left" Margin="530,37,0,0" VerticalAlignment="Top" Width="80" Height="27" Click="ButtonShow_Click"/>
        <Button x:Name="buttonSendMail" Content="На почту" HorizontalAlignment="Left" Margin="860,36,0,0" VerticalAlignment="Top" Width="80" Height="27" Click="ButtonSendToMail"/>
        <ComboBox MinWidth="100" VerticalAlignment='Top' HorizontalAlignment ='Left'  Name="ComboBoxDiscipline" Margin="400,38,0,0">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Label x:Name="label" Content="Дисциплина:" HorizontalAlignment="Left" Margin="305,34,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxMail" HorizontalAlignment="Left" Height="22" Margin="661,38,0,0" TextWrapping="Wrap" Text="Адрес почты" VerticalAlignment="Top" Width="168"/>
    </Grid>
</Window>
