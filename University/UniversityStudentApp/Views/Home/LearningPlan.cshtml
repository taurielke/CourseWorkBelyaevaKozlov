@using UniversityBusinessLogic.ViewModels

@model List<LearningPlanViewModel>
@{
    ViewData["Title"] = "LearningPlans";
}

<div class="text-center">
    <h1 class="display-4">Планы обучения</h1>
</div>

<div class="text-center">
    @{
        if (Model == null)
        {
            <h3 class="display-4">Авторизируйтесь</h3>
            return;
        }
         <div class="d-grid gap-2 d-md-flex justify-content-md-start">
          <a type="button" class="btn btn-outline-dark" asp-action="LearningPlanCreate">Создать план обучения</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Номер
                    </th>
                    <th>
                        Название плана обучения
                    </th>
                    <th>
                        Количество часов
                    </th>
                    <th>
                        Изменение плана обучения
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LearningPlanName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hours)
                        </td>
                        <td>
                            <a class="btn btn-outline-dark button-fixed button-sm" asp-action="LearningPlanUpdate"
                            asp-route-learningPlanId="@item.Id" asp-route-learningPlanName="@item.LearningPlanName" 
                            asp-route-hours="@item.Hours">Изменить</a>
                            <a class="btn btn-outline-dark button-fixed button-sm" asp-action="LearningPlanDelete" asp-route-learningPlanId="@item.Id">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>