@using UniversityBusinessLogic.ViewModels

@model DeaneryViewModel
@{
    ViewData["Title"] = "Privacy Policy";
}
<div class="text-center">
    <h2 class="display-4">Личные данные</h2>
</div>
<form method="post">
    <div class="row">
        <div class="col-4">Логин:</div>
        <div class="col-8"><input type="text" name="login" value="@Model.Login"/></div>
    </div>
    <div class="row">
        <div class="col-4">Пароль:</div>
        <div class="col-8"><input type="password" name="password" value="@Model.Password"/></div>
    </div>
    <div class="row">
        <div class="col-4">Название деканата:</div>
        <div class="col-8"><input type="text" name="deaneryName" value="@Model.Name"/></div>
    </div>
    <div class="row">
        <div class="col-8"></div>
        <div class="col-4"><input type="submit" value="Сохранить" class="btn btnprimary" /></div>
    </div>
</form>